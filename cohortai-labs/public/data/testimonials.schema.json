{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://itprofessional.pro/schemas/cohortai-testimonials-v1.json",
  "title": "CohortAI Testimonials Upload Schema v1",
  "type": "object",
  "required": [
    "version",
    "updatedAt",
    "schema",
    "items"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "updatedAt": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "schema": {
      "const": "cohortai.testimonials.v1"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 200,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "role",
          "city",
          "track",
          "rating",
          "quote"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "city": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "track": {
            "type": "string",
            "enum": [
              "Everyday AI",
              "Business AI",
              "Tech & Data AI",
              "Enterprise",
              "General"
            ]
          },
          "rating": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          },
          "quote": {
            "type": "string",
            "minLength": 10,
            "maxLength": 420
          },
          "source": {
            "type": "string",
            "maxLength": 80
          },
          "featured": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}